@model IEnumerable<Project.Models.VerbaleByTrasgressore>

@{
    ViewData["Title"] = "Verbali per Trasgressore";
}

<h1>Verbali per Trasgressore</h1>
<div>
    <a asp-action="Index">Back to Home</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID Trasgressore</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Totale Verbali</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDAnagrafica</td>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.TotaleVerbali</td>
            </tr>
        }
    </tbody>
</table>
